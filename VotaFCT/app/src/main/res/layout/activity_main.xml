<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.fernandokaway.votafct.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insira RA e senha"
        android:id="@+id/infoTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RAEditText"
        android:layout_below="@+id/infoTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Digite RA"
        android:text="1244760" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/senhaEditText"
        android:layout_below="@+id/RAEditText"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/RAEditText"
        android:hint="Digite senha"
        android:text="123456" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/okButton"
        android:layout_below="@+id/senhaEditText"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/senhaEditText" />
</RelativeLayout>
